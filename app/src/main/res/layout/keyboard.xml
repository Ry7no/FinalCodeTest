<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_num1"
                style="@style/keyboardStyle"
                android:text="1"/>

            <Button
                android:id="@+id/btn_num2"
                style="@style/keyboardStyle"
                android:text="2"/>

            <Button
                android:id="@+id/btn_num3"
                style="@style/keyboardStyle"
                android:text="3"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn_num4"
                style="@style/keyboardStyle"
                android:text="4"/>

            <Button
                android:id="@+id/btn_num5"
                style="@style/keyboardStyle"
                android:text="5"/>

            <Button
                android:id="@+id/btn_num6"
                style="@style/keyboardStyle"
                android:text="6"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_num7"
                style="@style/keyboardStyle"
                android:text="7"/>

            <Button
                android:id="@+id/btn_num8"
                style="@style/keyboardStyle"
                android:text="8"/>

            <Button
                android:id="@+id/btn_num9"
                style="@style/keyboardStyle"
                android:text="9"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_del"
                style="@style/keyboardStyle"
                android:text="Del"/>

            <Button
                android:id="@+id/btn_num0"
                style="@style/keyboardStyle"
                android:text="0"/>

            <Button
                android:id="@+id/btn_enter"
                style="@style/keyboardStyle"
                android:text="Enter"/>

        </LinearLayout>

    </LinearLayout>

</merge>